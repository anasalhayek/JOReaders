<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#444444</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- splash screen. -->
    <style name="AppTheme.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/ss</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Header" >
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/baskvl</item>

    </style>
    <style name="Header2" >
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arabtype</item>
    </style>
    <style name="Header3" >
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arabtype</item>
    </style>
    <style name="Header4" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arabtype</item>
    </style>

    <style name="NavTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arabtype</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arabtype</item>
    </style>

    <style name="ButtTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/arabtype</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

</resources>
