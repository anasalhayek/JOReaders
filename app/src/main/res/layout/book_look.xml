<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_layout"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:padding="1dp">

    <ImageView
        android:id="@+id/book_image_book_look"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_library_books" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        >

        <TextView
            android:id="@+id/book_date_book_look"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_back_ground2"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone"
            android:padding="4dp"
            android:shadowRadius="10"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="#444444"/>

    <TextView
        android:id="@+id/book_name_book_look"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_back_ground"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:shadowRadius="10"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="#444444"
        android:padding="8dp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/more_shelves_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:text="@string/_8942"
        android:textColor="#444444"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="top|end"
        android:visibility="gone"
        android:shadowRadius="10"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="#444444"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>