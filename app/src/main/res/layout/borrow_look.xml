<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/borrow_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_image_borrow_look"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_library_books" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_name_borrow_look"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arabtype"
                android:gravity="center"
                android:textColor="#444444"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_name_borrow_look"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arabtype"
                android:gravity="center"
                android:textColor="#444444"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_un_borrow_look"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/arabtype"
                android:gravity="center"
                android:textColor="#444444"
                android:textSize="20sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/more_borrow_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:gravity="center_horizontal"
            android:text="@string/_8942"
            android:textColor="#444444"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>